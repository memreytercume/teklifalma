    <script>
        // EmailJS başlatma
        (function() {
            emailjs.init("YOUR_PUBLIC_KEY"); // EmailJS public key'inizi buraya ekleyin
        })();

        const prices = {
            tr: 325,
            en: 325,
            de: 475,
            nl: 550,
            ru: 650,
            fr: 650,
            es: 850,
            it: 850,
            fa: 1000,
            ar: 1000,
            tk: 750,
            uz: 750,
            az: 750,
            other: 1000
        };

        function calculatePrice() {
            const sourceLang = document.getElementById('sourceLang').value;
            const targetLang = document.getElementById('targetLang').value;
            const pageCount = parseInt(document.getElementById('pageCount').value) || 0;
            
            if (!sourceLang || !targetLang || pageCount === 0) return 0;

            let basePrice;
            if (sourceLang === 'tr' || targetLang === 'tr') {
                basePrice = Math.max(prices[sourceLang === 'tr' ? targetLang : sourceLang], 325);
            } else {
                basePrice = (prices[sourceLang] + prices[targetLang]) * 0.7;
            }

            return basePrice * pageCount;
        }

        function updatePrice() {
            const total = calculatePrice();
            document.getElementById('totalPrice').textContent = `${total.toFixed(2)} TL`;
        }

        document.getElementById('sourceLang').addEventListener('change', updatePrice);
        document.getElementById('targetLang').addEventListener('change', updatePrice);
        document.getElementById('pageCount').addEventListener('input', updatePrice);

        document.getElementById('translationForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const totalPrice = document.getElementById('totalPrice').textContent;
            
            const templateParams = {
                from_name: formData.get('customerName'),
                from_email: 'memreydanismanlik@gmail.com',
                to_email: 'info@memreydanismanlik.com',
                message: `
                    Teklif Detayları:
                    Kaynak Dil: ${formData.get('sourceLang')}
                    Hedef Dil: ${formData.get('targetLang')}
                    Belge Türü: ${formData.get('documentType')}
                    Sayfa Adedi: ${formData.get('pageCount')}
                    İşlem Türü: ${formData.get('processType')}
                    Ek İşlemler: ${formData.get('additionalServices')}
                    Teslim Seçeneği: ${formData.get('deliveryOption')}
                    Toplam Fiyat: ${totalPrice}

                    Müşteri Bilgileri:
                    Ad Soyad: ${formData.get('customerName')}
                    E-posta: ${formData.get('customerEmail')}
                    Telefon: ${formData.get('customerPhone')}
                    Notlar: ${formData.get('customerNotes')}
                `
            };

            emailjs.send('YOUR_SERVICE_ID', 'YOUR_TEMPLATE_ID', templateParams)
                .then(function(response) {
                    alert('Teklifiniz başarıyla gönderildi!');
                }, function(error) {
                    alert('Teklif gönderiminde hata oluştu. Lütfen tekrar deneyiniz.');
                });
        });
    </script>
